@model ProductYouTubeVideoProductModel
@inject Nop.Services.Common.IGenericAttributeService genericAttributeService
@inject Nop.Core.IWorkContext workContext
@{
    const string hideYouTubeVideoBlockAttributeName = "ProductPage.HideYouTubeVideosBlock";
    var hideYouTubeVideoBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideYouTubeVideoBlockAttributeName, defaultValue: true);
}
<nop-card asp-name="product-youtube-videos" asp-icon="fab fa-youtube" asp-title="@T(LocaleResourceDefaults.PRODUCT_YOUTUBE_VIDEO)" asp-hide-block-attribute-name="@hideYouTubeVideoBlockAttributeName" asp-hide="@hideYouTubeVideoBlock" asp-advanced="true">
    @await Html.PartialAsync($"~/Plugins/{PluginDefaults.SYSTEM_NAME}/Views/Admin/_CreateOrUpdateProduct.YouTubeVideos.cshtml", Model)
</nop-card>
